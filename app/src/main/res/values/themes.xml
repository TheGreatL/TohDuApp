<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TohDu" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">#C4C0C0</item>
        <item name="colorAccent">@color/black</item>
        <item name="textInputStyle">@color/black</item>
        <item name="fontFamily">@font/calibri</item>
        <item name="font">@font/calibri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="Theme.TohDu" parent="Base.Theme.TohDu" />

    <style name="TextInputLayoutStyle" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>

    </style>

    <style name="Date_TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <!--    <style name="DatePickerTheme" parent="android:Theme.DeviceDefault.Light.Dialog">-->
    <!--        <item name="android:headerBackground">@color/black</item>-->
    <!--        <item name="android:calendarTextColor">@color/white</item>-->
    <!--        <item name="android:selectedWeekBackgroundColor">@color/black</item>-->

    <!--    </style>-->

    <style name="DefaultCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">10dp</item>

    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/back_button</item>
        <item name="contentDescription">@string/back_button</item>
        <item name="android:onClick">onButtonClicked</item>
        <item name="android:src">@drawable/back_icon</item>

        <item name="android:tooltipText">@string/back_button</item>
    </style>

    <style name="BreakLine" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>

    </style>

    <style name="BottomNavIcons" parent="Widget.AppCompat.ImageButton">
        <item name="android:onClick">bottomNaviAction</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.TohDu.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.TohDu.AppWidgetContainer" parent="Theme.TohDu.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>